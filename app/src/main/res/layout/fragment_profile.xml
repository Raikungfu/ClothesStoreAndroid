<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        android:id="@+id/fragment_profile"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.profile.ProfileFragment">

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_marginTop="16dp"
            android:layout_gravity="top|left">

        <ImageView
                android:id="@+id/information_view"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="top|left"
                android:scaleType="centerInside"/>
        <ImageView
                android:id="@+id/userAvt"
                android:layout_width="93dp"
                android:layout_height="72dp"
                android:layout_gravity="top|left"
                android:scaleType="centerInside"/>

        <TextView
                android:id="@+id/tv_username"
                android:layout_width="wrap_content"
                android:layout_height="23dp"
                android:layout_marginLeft="110dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="-0.5dp"
                android:layout_gravity="top|left"
                android:gravity="left|center_vertical"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/textPrimary"
                android:textStyle="bold"
                android:textSize="18dp"/>

        <TextView
                android:id="@+id/tv_email"
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:layout_marginLeft="110dp"
                android:layout_marginTop="40dp"
                android:layout_gravity="top|left"
                android:gravity="left|center_vertical"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/textPrimary"
                android:textSize="14dp"/>


    </FrameLayout>


    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            android:padding="1dp"
            android:scrollbars="vertical" >
        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_gravity="top|left">
            <ImageView
                    android:id="@+id/order_Btn"
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    android:layout_gravity="top|left"
                    android:scaleType="centerInside"/>

            <FrameLayout
                    android:layout_width="122dp"
                    android:layout_height="36dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="18dp"
                    android:layout_gravity="top|left">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="21dp"
                        android:layout_marginTop="-2.5dp"
                        android:layout_marginBottom="-2.5dp"
                        android:layout_gravity="top|left"
                        android:gravity="left|center_vertical"
                        android:includeFontPadding="false"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text="My orders"
                        android:textColor="@color/textPrimary"
                        android:textSize="16dp"/>


            </FrameLayout>


        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_marginTop="82dp"
                android:layout_gravity="top|left">

            <ImageView
                    android:id="@+id/address_Btn"
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    android:layout_gravity="top|left"
                    android:scaleType="centerInside"/>
            <FrameLayout
                    android:layout_width="153dp"
                    android:layout_height="36dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="18dp"
                    android:layout_gravity="top|left">

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="21dp"
                        android:layout_marginTop="-2.5dp"
                        android:layout_marginBottom="-2.5dp"
                        android:layout_gravity="top"
                        android:gravity="left|center_vertical"
                        android:includeFontPadding="false"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text="Shipping addresses"
                        android:textColor="@color/textPrimary"
                        android:textSize="16dp"/>


            </FrameLayout>


        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_marginTop="164dp"
                android:layout_gravity="top|left">
            <ImageView
                    android:id="@+id/payment_Btn"
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    android:layout_gravity="top|left"
                    android:scaleType="centerInside"/>
            <FrameLayout
                    android:layout_width="143dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="19dp"
                    android:layout_gravity="top|left">

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="21dp"
                        android:layout_marginTop="-2.5dp"
                        android:layout_marginBottom="-2.5dp"
                        android:layout_gravity="top"
                        android:gravity="left|center_vertical"
                        android:includeFontPadding="false"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text="Payment methods"
                        android:textColor="@color/textPrimary"
                        android:textSize="16dp"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="15dp"
                        android:layout_marginTop="22dp"
                        android:layout_marginBottom="-2dp"
                        android:layout_gravity="left"
                        android:gravity="left|center_vertical"
                        android:includeFontPadding="false"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text="Visa  **34"
                        android:textColor="#FF9B9B9B"
                        android:textSize="11dp"/>
            </FrameLayout>


        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_marginTop="246dp"
                android:layout_gravity="top|left">
            <ImageView
                    android:id="@+id/promocode_Btn"
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    android:layout_gravity="top|left"
                    android:scaleType="centerInside"/>

            <FrameLayout
                    android:layout_width="158dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="19dp"
                    android:layout_gravity="top|left">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="21dp"
                        android:layout_marginTop="-2.5dp"
                        android:layout_marginBottom="-2.5dp"
                        android:layout_gravity="top|left"
                        android:gravity="left|center_vertical"
                        android:includeFontPadding="false"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text="Promocodes"
                        android:textColor="@color/textPrimary"
                        android:textSize="16dp"/>

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="15dp"
                        android:layout_marginTop="22dp"
                        android:layout_marginBottom="-2dp"
                        android:gravity="left|center_vertical"
                        android:includeFontPadding="false"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text="You have special promocodes"
                        android:textColor="#FF9B9B9B"
                        android:textSize="11dp"/>
            </FrameLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_marginTop="328dp"
                android:layout_gravity="top|left">
            <ImageView
                    android:id="@+id/myreview_Btn"
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    android:layout_gravity="top|left"
                    android:scaleType="centerInside"/>

            <FrameLayout
                    android:layout_width="105dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="19dp"
                    android:layout_gravity="top|left">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="21dp"
                        android:layout_marginTop="-2.5dp"
                        android:layout_marginBottom="-2.5dp"
                        android:layout_gravity="top|left"
                        android:gravity="left|center_vertical"
                        android:includeFontPadding="false"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text="My reviews"
                        android:textColor="@color/textPrimary"
                        android:textSize="16dp"/>

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="15dp"
                        android:layout_marginLeft="1dp"
                        android:layout_marginTop="22dp"
                        android:layout_marginBottom="-2dp"
                        android:gravity="left|center_vertical"
                        android:includeFontPadding="false"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text="Reviews for 4 items"
                        android:textColor="#FF9B9B9B"
                        android:textSize="11dp"/>
            </FrameLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_marginTop="410dp"
                android:layout_gravity="top|left">
            <ImageView
                    android:id="@+id/settings_Btn"
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    android:layout_gravity="top|left"
                    android:scaleType="centerInside"/>

            <FrameLayout
                    android:layout_width="124dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="19dp"
                    android:layout_gravity="top|left">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="21dp"
                        android:layout_marginTop="-2.5dp"
                        android:layout_marginBottom="-2.5dp"
                        android:layout_gravity="top|left"
                        android:gravity="left|center_vertical"
                        android:includeFontPadding="false"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text="Settings"
                        android:textColor="@color/textPrimary"
                        android:textSize="16dp"/>

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="15dp"
                        android:layout_marginTop="22dp"
                        android:layout_marginBottom="-2dp"
                        android:gravity="left|center_vertical"
                        android:includeFontPadding="false"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text="Notifications, password"
                        android:textColor="#FF9B9B9B"
                        android:textSize="11dp"/>
            </FrameLayout>
        </androidx.cardview.widget.CardView>
        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_marginTop="500dp"
                android:layout_gravity="top|left">
            <Button
                    android:id="@+id/logout_Btn"
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    android:layout_gravity="top|left"
                    android:scaleType="centerInside"
                    android:text="Log out"
                    android:background="@drawable/bg_button_primary"/>

        </FrameLayout>
    </FrameLayout>
</FrameLayout>
