<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.order.OrdersDetailFragment">


    <TextView
            android:id="@+id/txt_order_date"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="50dp"
            android:layout_gravity="top|left"
            android:gravity="right|center_vertical"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="#FF9B9B9B"
            android:textSize="14dp"/>
    <FrameLayout
            android:layout_width="231dp"
            android:layout_height="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="top|left">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_gravity="left"
                android:gravity="right|center_vertical"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:singleLine="true"
                android:text="Order ID: "
                android:textStyle="bold"
                android:textColor="@color/textPrimary"
                android:textSize="14dp" />

        <TextView
                android:id="@+id/txt_order_number"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginLeft="70dp"
                android:gravity="left|center_vertical"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/textPrimary"
                android:textSize="14dp" />
    </FrameLayout>
    <TextView
            android:id="@+id/txt_status"
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:layout_marginLeft="289dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="45dp"
            android:layout_marginBottom="894.1dp"
            android:gravity="center"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="#FF2AA952"
            android:textSize="14dp" />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="620dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="90dp"
            android:layout_gravity="top|left"
            android:gravity="left|top"
            android:orientation="vertical">

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/listViewProduct"
                android:layout_width="match_parent"
                android:layout_height="320dp"
                android:dividerHeight="3dp"/>
        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginTop="245dp">
            <Button
                    android:layout_width="140dp"
                    android:layout_height="36dp"
                    android:layout_marginLeft="30dp"
                    android:text="Leave feedback"
                    android:textSize="14sp"
                    android:textColor="@color/textPrimary"
                    android:background="@drawable/bg_button_secondary"/>
            <Button
                    android:textColor="@color/textPrimary"
                    android:background="@drawable/bg_button_primary"
                    android:id="@+id/reorder"
                    android:layout_width="140dp"
                    android:layout_height="36dp"
                    android:layout_marginLeft="205dp"
                    android:text="Reorder"
                    android:textSize="14sp"/>
        </FrameLayout>


    </LinearLayout>


    <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="430dp"
            android:layout_gravity="top|left"
            android:gravity="right|center_vertical"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:singleLine="true"
            android:text="Order information"
            android:textColor="@color/textPrimary"
            android:textSize="18dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="500dp"
            android:layout_gravity="top|left"
            android:gravity="right|center_vertical"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:singleLine="true"
            android:text="Shipping Address"
            android:textColor="@color/textPrimary"
            android:textSize="14dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="470dp"
            android:layout_gravity="top|left"
            android:gravity="right|center_vertical"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:singleLine="true"
            android:text="Note"
            android:textColor="@color/textPrimary"
            android:textSize="14dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="530dp"
            android:layout_gravity="top|left"
            android:gravity="right|center_vertical"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:singleLine="true"
            android:text="Payment method"
            android:textColor="@color/textPrimary"
            android:textSize="14dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="560dp"
            android:layout_gravity="top|left"
            android:gravity="right|center_vertical"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:singleLine="true"
            android:text="Ship Fee"
            android:textColor="@color/textPrimary"
            android:textSize="14dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="590dp"
            android:layout_gravity="top|left"
            android:gravity="right|center_vertical"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:singleLine="true"
            android:text="Discount"
            android:textColor="@color/textPrimary"
            android:textSize="14dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="620dp"
            android:layout_gravity="top|left"
            android:gravity="right|center_vertical"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:singleLine="true"
            android:text="Total Amount"
            android:textColor="@color/textPrimary"
            android:textSize="14dp"/>


    <TextView
            android:id="@+id/note"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginLeft="148dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="470dp"
            android:gravity="center"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:singleLine="true"
            android:textSize="14dp"
            android:textColor="@color/textPrimary"/>

    <TextView
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginLeft="148dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="500dp"
            android:gravity="center"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:singleLine="true"
            android:textSize="14dp"
            android:textColor="@color/textPrimary"/>
    <TextView
            android:id="@+id/payment"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginLeft="148dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="530dp"
            android:gravity="center"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:singleLine="true"
            android:textSize="14dp"
            android:textColor="@color/textPrimary"/>
    <TextView
            android:id="@+id/shipFee"
            android:layout_width="match_parent"
            android:layout_height="14dp"
            android:layout_marginLeft="148dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="560dp"
            android:gravity="center"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:singleLine="true"
            android:textSize="14dp"
            android:textColor="@color/textPrimary"/>
    <TextView
            android:id="@+id/discount"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginLeft="148dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="590dp"
            android:gravity="center"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:singleLine="true"
            android:textSize="14dp"
            android:textColor="@color/textPrimary"/>
    <TextView
            android:id="@+id/txt_total_amount_value"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginLeft="148dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="620dp"
            android:gravity="center"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:singleLine="true"
            android:textSize="14dp"
            android:textColor="@color/textPrimary"/>


</FrameLayout>

