<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp">

    <ImageView
        android:id="@+id/review_avatar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="10dp"
        android:scaleType="centerCrop"
        android:layout_gravity="center"
        android:contentDescription="Avatar" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/review_sender_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Người gửi"
            android:textStyle="bold"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/review_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nội dung tin nhắn"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ratingStar1"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginEnd="4dp"
            android:scaleType="fitXY"
            android:src="@drawable/star" />
        <ImageView
            android:id="@+id/ratingStar2"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginEnd="4dp"
            android:scaleType="fitXY"
            android:src="@drawable/star" />
        <ImageView
            android:id="@+id/ratingStar3"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginEnd="4dp"
            android:scaleType="fitXY"
            android:src="@drawable/star" />
        <ImageView
            android:id="@+id/ratingStar4"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginEnd="4dp"
            android:scaleType="fitXY"
            android:src="@drawable/star" />
        <ImageView
            android:id="@+id/ratingStar5"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:scaleType="fitXY"
            android:src="@drawable/star" />
    </LinearLayout>
</LinearLayout>
